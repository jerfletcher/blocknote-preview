{
  "name": "blocknote-markdown-editor",
  "displayName": "BlockNote Markdown Editor",
  "description": "Enhanced markdown editing and preview using BlockNote editor",
  "version": "0.0.71",
  "publisher": "jeremy-fletcher",
  "icon": "media/blocknote-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerfletcher/blocknote-preview.git"
  },
  "homepage": "https://github.com/jerfletcher/blocknote-preview#readme",
  "bugs": {
    "url": "https://github.com/jerfletcher/blocknote-preview/issues"
  },
  "engines": {
    "vscode": ">=1.100.0"
  },
  "categories": [
    "Other",
    "Notebooks",
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blocknote-markdown-editor.openEditor",
        "title": "Open with BlockNote",
        "icon": "$(edit)"
      },
      {
        "command": "blocknote-markdown-editor.newFile",
        "title": "New BlockNote Markdown File",
        "icon": "$(new-file)"
      },
      {
        "command": "blocknote-markdown-editor.openWithDefault",
        "title": "Open with Default Markdown Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "blocknote-markdown-editor.toggleEditor",
        "title": "Toggle BlockNote/Default Editor",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "blocknote-markdown-editor.compareFiles",
        "title": "Compare Files with Default Editor",
        "icon": "$(diff)"
      },
      {
        "command": "blocknote-markdown-editor.toggleViewMode",
        "title": "Toggle Rich/Text View Mode",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "blocknote-markdown-editor.openEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        },
        {
          "command": "blocknote-markdown-editor.compareFiles",
          "when": "resourceExtname == .md && !explorerResourceIsFolder",
          "group": "7_modification"
        }
      ],
      "editor/title": [
        {
          "command": "blocknote-markdown-editor.openEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        },
        {
          "command": "blocknote-markdown-editor.compareFiles",
          "when": "resourceExtname == .md",
          "group": "1_diff"
        },
        {
          "command": "blocknote-markdown-editor.toggleViewMode",
          "when": "activeCustomEditorId == blocknote-markdown-editor.editor",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "blocknote-markdown-editor.editor",
        "displayName": "BlockNote Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option",
        "supportsMultipleEditorsPerDocument": true
      }
    ],
    "configuration": {
      "title": "BlockNote Markdown Editor",
      "properties": {
        "blocknote-markdown-editor.useDiffForComparison": {
          "type": "boolean",
          "default": true,
          "description": "Use default text diff view when comparing markdown files instead of BlockNote editor. When enabled, file comparisons will use VS Code's built-in diff functionality."
        },
        "blocknote-markdown-editor.autoOpenBlockNote": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open markdown files with BlockNote editor by default instead of the default text editor."
        },
        "blocknote-markdown-editor.enableDefaultForDiff": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fall back to default text editor when VS Code tries to show diffs. This ensures proper diff highlighting works."
        },
        "blocknote-markdown-editor.defaultViewMode": {
          "type": "string",
          "enum": [
            "rich",
            "text"
          ],
          "default": "rich",
          "description": "Default view mode when opening files: 'rich' for visual editor, 'text' for plain markdown text."
        }
      }
    },
    "keybindings": [
      {
        "command": "blocknote-markdown-editor.newFile",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n"
      },
      {
        "command": "blocknote-markdown-editor.toggleEditor",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceExtname == .md"
      },
      {
        "command": "blocknote-markdown-editor.toggleViewMode",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "activeCustomEditorId == blocknote-markdown-editor.editor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run compile",
    "build:prod": "npm run package",
    "build:dev": "npm run compile",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "vsix:package": "npm run clean:vsix && npm version patch --no-git-tag-version && npm run package && vsce package",
    "vsix:package:patch": "npm run clean:vsix && npm version patch --no-git-tag-version && npm run package && vsce package",
    "vsix:package:minor": "npm run clean:vsix && npm version minor --no-git-tag-version && npm run package && vsce package",
    "vsix:package:major": "npm run clean:vsix && npm version major --no-git-tag-version && npm run package && vsce package",
    "vsix:install": "npm run vsix:package:patch && code-insiders --install-extension *.vsix",
    "vsix:install:patch": "npm run vsix:package:patch && code-insiders --install-extension *.vsix",
    "vsix:install:minor": "npm run vsix:package:minor && code-insiders --install-extension *.vsix",
    "vsix:install:major": "npm run vsix:package:major && code-insiders --install-extension *.vsix",
    "vsix:install:stable": "npm run vsix:package && code --install-extension *.vsix",
    "vsix:install:insiders": "npm run vsix:package && code-insiders --install-extension *.vsix",
    "vsix:install:auto": "npm run vsix:package && (code-insiders --install-extension *.vsix 2>/dev/null || code --install-extension *.vsix)",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "clean:vsix": "rm -f *.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist out *.vsix",
    "dev": "npm run watch",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@blocknote/core": "^0.35.0",
    "@blocknote/mantine": "^0.35.0",
    "@blocknote/react": "^0.35.0",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/language": "^6.11.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@lezer/highlight": "^1.2.1",
    "codemirror": "^6.0.2",
    "sharp": "^0.34.3"
  }
}
