{
  "name": "blocknote-markdown-editor",
  "displayName": "BlockNote Markdown Editor",
  "description": "A markdown editor and preview extension using BlockNote",
  "version": "0.0.19",
  "publisher": "jeremy-fletcher",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerfletcher/blocknote-preview.git"
  },
  "homepage": "https://github.com/jerfletcher/blocknote-preview#readme",
  "bugs": {
    "url": "https://github.com/jerfletcher/blocknote-preview/issues"
  },
  "engines": {
    "vscode": ">=1.100.0"
  },
  "categories": [
    "Other",
    "Notebooks",
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blocknote-markdown-editor.openEditor",
        "title": "Open with BlockNote",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "blocknote-markdown-editor.openEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "blocknote-markdown-editor.openEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "blocknote-markdown-editor.editor",
        "displayName": "BlockNote Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run compile",
    "build:prod": "npm run package",
    "build:dev": "npm run compile",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "vsix:package": "npm run clean:vsix && npm version patch --no-git-tag-version && npm run package && vsce package",
    "vsix:install": "npm run vsix:package && code-insiders --install-extension *.vsix",
    "vsix:install:stable": "npm run vsix:package && code --install-extension *.vsix",
    "vsix:install:insiders": "npm run vsix:package && code-insiders --install-extension *.vsix",
    "vsix:install:auto": "npm run vsix:package && (code-insiders --install-extension *.vsix 2>/dev/null || code --install-extension *.vsix)",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "clean:vsix": "rm -f *.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist out *.vsix",
    "dev": "npm run watch",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@blocknote/core": "^0.35.0",
    "@blocknote/mantine": "^0.35.0",
    "@blocknote/react": "^0.35.0"
  }
}
